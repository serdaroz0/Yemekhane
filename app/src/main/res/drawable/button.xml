<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <gradient
                android:angle="-90"
                android:endColor="@color/button_selected_start"
                android:startColor="@color/button_selected_end" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <stroke
                android:width="1dp"
                android:color="#af280a0a" />
            <solid android:color="#6f5c2125" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <gradient
                android:angle="-90"
                android:endColor="@color/button_start"
                android:startColor="@color/button_end" />
        </shape>
    </item>
</selector>